{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "watch-tailwind": "npx tailwindcss -i ./tailwind.css -o ./public/global.css --watch",
    "watch-svelte": "rollup -c -w",
    "watch-server": "../venv/bin/python -m uvicorn main:app --reload",
    "prod-svelte": "rollup -c && sirv public --no-clear --host 0.0.0.0",
    "prod-server": "../venv/bin/python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "local-svelte":"rollup -c && sirv public --no-clear",
    "local-server": "../venv/bin/python -m uvicorn main:app", 
    "dev": "concurrently npm:watch-*",
    "prod": "concurrently npm:prod-*",
    "local": "concurrently npm:local-*",
    "start": "sirv public --no-clear"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "concurrently": "^7.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "tailwindcss": "^3.0.23"
  },
  "dependencies": {
    "sirv-cli": "^2.0.0"
  }
}
